<h1> Links </h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title:  <%= link.title %>
      URL:    <%= link.url   %>
      Tag(s): <%= link.tags.map(&:name) %>
    </li>
  <% end %>
</ul>

<form action="/links/new">
	<input type="submit" id="add a link" value="add a link"/>
</form>
